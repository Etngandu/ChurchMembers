@model ENB.Church.Members.MVC.Models.CreateAndEditActivity
@using ENB.Church.Members.Entities;
@{
    ViewData["Title"] = "Create";
}

<div class="alert alert-primary" role="alert">
    <h2><strong>Create New Appointment</strong></h2>
</div>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" asp-route-id="@ViewBag.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin:10px 0px 10px 0px">
                            <label asp-for="Activity_Type" class="control-label"></label>
                        </div>
                        <select asp-for="Activity_Type" class="form-control" asp-items="Html.GetEnumSelectList<Activity_Type>()"></select>
                        <span asp-validation-for="Activity_Type" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin:10px 0px 10px 0px">
                            <label asp-for="Start" class="control-label"></label>
                        </div>
                        <input asp-for="Start" class="form-control" />
                        <span asp-validation-for="Start" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin:10px 0px 10px 0px">
                            <label asp-for="End" class="control-label"></label>
                        </div>
                        <input asp-for="End" class="form-control" />
                        <span asp-validation-for="End" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin:10px 0px 10px 0px">
                            <label asp-for="Activity_Description" class="control-label"></label>
                        </div>
                        <textarea asp-for="Activity_Description" type="text" class="form-control" rows="3" autofocus></textarea>
                        <span asp-validation-for="Activity_Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin:10px 0px 10px 0px">
                            <label asp-for="Activity_OtherDetails" class="control-label"></label>
                        </div>
                        <textarea asp-for="Activity_OtherDetails" type="text" class="form-control" rows="3" autofocus></textarea>
                        <span asp-validation-for="Activity_OtherDetails" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:10px">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-secondary btn-block col-md-4">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
