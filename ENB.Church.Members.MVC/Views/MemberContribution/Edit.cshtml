@model ENB.Church.Members.MVC.Models.CreateAndEditMemberContribution
@using ENB.Church.Members.Entities
@{
    ViewData["Title"] = "Edit";
}

<div class="alert alert-primary" role="alert">
    <h2><strong>Edit Contribution from @ViewBag.Message</strong></h2>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" asp-route-id="@ViewBag.Id" asp-route-memberId="@ViewBag.IdMember">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Ministry" class="control-label card-header col-md-12" style="margin-bottom:5px"></label>
                        <select id="drpEmpList" class="form-control" asp-for="MinistryId" asp-items="@(new SelectList(Model.ListMinistry, "Value", "Text"))">
                            <option value="0">--Select--</option>
                        </select>
                        <span asp-validation-for="MinistryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Contribution_amount" class="control-label card-header col-md-12" style="margin-bottom:10px"></label>
                        <Input asp-for="Contribution_amount" type="text" class="form-control" />
                        <span asp-validation-for="Contribution_amount" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Contribution_Date" class="control-label card-header col-md-12" style="margin-bottom:10px"></label>
                        <Input asp-for="Contribution_Date" type="text" class="form-control" />
                        <span asp-validation-for="Contribution_Date" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Payment_Method" class="control-label card-header col-md-12" style="margin-bottom:10px"></label>
                        <select asp-for="Payment_Method" class="form-control" asp-items="Html.GetEnumSelectList<Ref_payment_method>()"></select>
                        <span asp-validation-for="Payment_Method" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group" style="margin-top:5px">
                        <label asp-for="Contribution_Comments" class="control-label card-header col-md-12" style="margin-bottom:10px"></label>
                        <textarea asp-for="Contribution_Comments" type="text" class="form-control" rows="5" autofocus></textarea>
                        <span asp-validation-for="Contribution_Comments" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="row" style="margin-top:25px">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <a asp-action="List" asp-route-memberId="@ViewBag.IdMember" class="btn btn-secondary btn-block col-md-4">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
